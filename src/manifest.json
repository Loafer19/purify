{
  "action": {
    "default_popup": "src/pop-up/index.html"
  },
  "content_scripts": [
    {
      "js": [
        "src/content-scripts/main.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "128": "icons/logo.png",
    "48": "icons/logo.png"
  },
  "manifest_version": 3,
  "name": "Purify - bringing clarity to websites",
  "options_ui": {
    "open_in_tab": true,
    "page": "src/options/index.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}