{
    "css": {
        "formatter": {
            "enabled": true
        },
        "linter": {
            "enabled": true
        }
    },
    "files": {
        "ignore": ["dist"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "style": {
                "useTemplate": "off"
            },
            "complexity": {
                "noForEach": "off"
            }
        }
    }
}
